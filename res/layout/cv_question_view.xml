<?xml version="1.0" encoding="utf-8"?>
<uk.co.burchy.timestable.TextViewQuestionView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tt_answer_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true" >

    <TextView
        android:id="@+id/test_question"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-light"
        android:paddingTop="20dp"
        android:gravity="right"
        android:text="2 x 2 = "
        android:textSize="35sp" />

    <TextView
        android:id="@+id/test_answer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:maxLength="3"
        android:minWidth="80dp"
        android:paddingTop="20dp"
        android:textSize="35sp" />

</uk.co.burchy.timestable.TextViewQuestionView>
