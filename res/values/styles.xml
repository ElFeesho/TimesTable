<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/tt_primary_light_colour</item>
    </style>

    <style name="tt_textview_title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/tt_primary_dark_colour</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/tt_primary_light_colour</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tt_numpad_button" parent="android:Widget.Holo.Light.Button">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:minHeight">60dp</item>
        
    </style>
</resources>